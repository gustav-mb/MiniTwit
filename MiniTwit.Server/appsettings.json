{
  "DatabaseName": "MiniTwit",
  "Argon2HashSettings": {
    "DegreeOfParallelism": 8,
    "Iterations": 4,
    "MemorySizeMB": 50,
    "TagLength": 128,
    "SaltLength": 16
  },
  "JwtSettings": {
    "Issuer": "Issuer",
    "Audience": "Audience",
    "TokenExpiryMin": 5,
    "RefreshTokenExpiryMin": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
